	            android:id="@+id/st_1_need"
	            android:layout_weight="1"
	            android:button="@null"
	            android:drawableBottom="@android:drawable/btn_radio"
	            android:gravity="center"
	            android:text="Needed" />
	
	        <RadioButton
	            android:id="@+id/st_1_canGive"
	            android:layout_weight="1"
	            android:button="@null"
	            android:drawableBottom="@android:drawable/btn_radio"
	            android:gravity="center"
	            android:text="Can Give" />
	
	        <RadioButton
	            android:id="@+id/st_1_none"
	            android:layout_weight="1"
	            android:button="@null"
	            android:drawableBottom="@android:drawable/btn_radio"
	            android:gravity="center"
